<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherited_purchase_order_form" model="ir.ui.view">
      <field name="name">purchase.order.form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form"/>
      <field name="arch" type="xml">

          <xpath expr="//button[@name='action_create_invoice']" position="replace">
              <button name="action_create_invoice" string="Create prueba" type="object" context="{'create_bill':True}" attrs="{'invisible': ['|', '|', ('state', 'not in', ('purchase', 'done')), ('invoice_status', 'not in', ('no', 'invoiced')), ('order_line', '=', [])]}" data-hotkey="w" groups="account.group_account_invoice"/>
          </xpath>

      </field>
    </record>
</odoo>

